

{% extends "../layoutAdmin.njk" %}

{% block content %}

<div class="menu">
  <h2 class="title">Editando recipe</h2>
  <div class="buttons-edit-page">
    <button type="submit" form="delete" class="delete-button">Deletar</button>
    <button type="submit" form="salve">Salvar recipe</button>
  </div>
</div>

<form method=POST id="salve" action="/recipes?_method=PUT" enctype="multipart/form-data">

  {% include 'recipes/fields.njk' %}
  <input type="hidden" name="id" value={{recipe.id}}>

</form>

<form method="POST" id="delete" action="/recipes?_method=DELETE">
  <input type="hidden" name="id" value={{recipe.id}}>
</form>

{% endblock content %}
