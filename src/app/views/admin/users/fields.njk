<div class="users-grid">
  <div class="users-fields">

    <div class="inputs-users-create">
        <label for="name">Nome</label>
        <div class="input">
          <input type="text" name="name" placeholder="Digite o nome do usuÃ¡rio" value="{{ user.name }}">
        </div>
    </div>

    <div class="inputs-users-create">
        <label for="email">Email</label>
        <div class="input">
          <input
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
    </div>

  </div>

  <div class="inputs-users-create users-isAdmin-field ">
  {#   name: 'Rodrigo Menezes',
  email: 'm4nfrinne@gmail.com',
  is_admin: 'on' #}

    {% if not user.is_admin %}
      <input type="radio" id="admin" name="is_admin">
      <label for="admin">Administrador</label>
    {% else %}
      <input type="radio" id="admin" name="is_admin" value="{{user.is_admin}}"
      {% if user.is_admin == 'true' %} checked {% endif %}>
      <label for="admin">Administrador</label>
    {% endif %}

  </div>
</div>




