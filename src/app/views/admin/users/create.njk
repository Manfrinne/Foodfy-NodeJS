    <div class="inputs-users-create users-isAdmin-field ">
      <input type="checkbox" id="admin" name="is_admin" class="field"
        {% if user.is_admin %} checked {% endif %}>
      <label for="admin">Administrador</label>
    </div>

  </form>

{% endblock content %}
