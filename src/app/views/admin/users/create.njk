{% extends "admin/parts/layoutAdmin.njk" %}

{% block content %}

  <div class="menu">
    <h2 class="title">Criar Usu√°rio</h2>
    <div class="create-user-buttons">
      <div class="buttons">
        <button type="submit" form="create">Salvar</button>
      </div>
      <div class="user-cancel buttons">
        <button type="button">
          <a href="create">Cancelar</a>
        </button>
      </div>
