
{% extends "admin/parts/layoutLogin.njk" %}

{% block content %}

    <h2 class="title">Esqueceu a senha?</h2>

    <form method="POST" id="userLoginForgot" action="/admin/users/forgot-password">

      <div class="inputs-users-login">
          <label for="email">Email</label>
          <div class="input">
            <input
              type="email"
              name="email"
              placeholder="Digite seu email para recuperar senha"
              value="{{ user.email }}"
              onblur="Validate.apply(this, 'isEmail')"
            >
          </div>
      </div>

    </form>

    <div class="user-forgot-form">
      <div class="buttons">
        {# <button type="submit" form="userLoginForgot">Recuperar</button> #}
        <a href="password-reset"><button>Recuperar</button></a>
      </div>
    </div>

{% endblock content %}


