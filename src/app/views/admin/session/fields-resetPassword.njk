
  <div class="users-login-fields">

    <div class="inputs-users-create">
        <label for="email">Email</label>
        <div class="input">
          <input
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
    </div>

    <div class="inputs-users-create">
        <label for="email">Nova Senha</label>
        <div class="input">
          <input
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
          >
        </div>
    </div>

    <div class="inputs-users-create">
        <label for="email">Repetir Senha</label>
        <div class="input">
          <input
            type="password"
            name="passwordRepeat"
            placeholder="Repetir a nova senha"
          >
        </div>
    </div>

  </div>






