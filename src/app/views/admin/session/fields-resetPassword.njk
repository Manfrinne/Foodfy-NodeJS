
  <div class="users-login-fields">

    <div class="inputs-users-login">
        <label for="email">Email</label>
        <div class="input" style="position: relative;">
          <input
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          >
        </div>
    </div>

    <div class="inputs-users-login">
        <label for="password">Nova Senha</label>
        <div class="input" style="position: relative;">
          <input
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
          >
        </div>
    </div>

    <div class="inputs-users-login">
        <label for="passwordRepeat">Repetir Senha</label>
        <div class="input" style="position: relative;">
          <input
            type="password"
            name="passwordRepeat"
            placeholder="Repetir a nova senha"
          >
        </div>
    </div>

  </div>

  <input type="hidden" name="token" value="{{token}}">






